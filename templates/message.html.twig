{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        main {
            text-align: center;
        }
        main>div {
            background-color: #392C1E;
            color: #B6AC97;
            padding: 2%;
            border-radius: 5px;
            border: solid black 1px;
            box-shadow: 0 5px 5px rgba(0, 0, 0, 0.75);
            display: inline-block;
            margin: 25vh auto;
        }
        main>div>a {
            color: #906427;
            font-style: italic;
            opacity: 0.7;
        }
        main>div>a:hover {
            color: #906427;
            opacity: 1;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div>
            <h1>{{ title }}</h1>
            <p>{{ message }}</p>
            <a href="{{ path(redirect_app)~elem_ref }}">Clickez ici pour être redirigé</a>
        </div>
    </main>
{% endblock %}
